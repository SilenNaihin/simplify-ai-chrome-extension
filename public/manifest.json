{
  "manifest_version": 3,
  "description": "Simplify pdfs with complicated wording.",
  "name": "SimplifyAI",
  "version": "1.0.0",
  "permissions": ["activeTab", "contextMenus", "tabs", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["content.js"] }],
  "action": {
    "default_icon": {
      "16": "logo192.png",
      "24": "logo192.png",
      "32": "logo192.png"
    }
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  }
}
